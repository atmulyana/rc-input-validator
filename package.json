{
  "name": "rc-input-validator",
  "version": "1.0.0",
  "description": "Doing validation to the form inputs in react app (web and native)",
  "author": "AT Mulyana <atmulyana@yahoo.com>",
  "license": "MIT",
  "repository": "https://github.com/atmulyana/rc-input-validator",
  "keywords": [
    "react",
    "react-native",
    "form",
    "input",
    "validation",
    "validator"
  ],
  "engines": {
    "node": ">=14"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "files": [
    "dist",
    "docs/images",
    "helpers",
    "native",
    "rules",
    "web",
    "Context.tsx",
    "global.d.ts",
    "index.ts",
    "messages.ts",
    "types.ts",
    "Validation.tsx"
  ],
  "peerDependencies": {
    "jssimpledateformat": "^3.0.3",
    "react": ">=16.8",
    "react-is": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@react-native/metro-config": "^0.78.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-native": "^13.2.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-is": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "!**/example/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(javascript-common|@react-native|react-native|reactjs-common)/)"
    ]
  },
  "dependencies": {
    "reactjs-common": "^0.0.4"
  }
}
